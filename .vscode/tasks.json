{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "npm: build",
			"detail": "webpack",
			"presentation": {
				"reveal": "silent",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			
			"label": "Run Webserver",
			"type": "shell",
      		"command": "python3 -m http.server 8080 --bind 127.0.0.1 --directory public/",
      		"windows": {
        		"command": "python3 -m http.server 8080 --bind 127.0.0.1 --directory public/"
      		},
      		"group": "build",
			"presentation": {
				"reveal": "silent",
				"showReuseMessage": false,
				"clear": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}